{
  "in": {
    "train": ["train_pos.txt", "train_neg.txt"],
    "test": ["test_pos.txt", "test_neg.txt"]
  },
  "tfidf": {
    "stop_words": "english",
    "ngram_range": [1,5],
    "use_idf": true,
    "smooth_idf": true,
    "sublinear_tf": true
  },
  "rf": {
    "n_estimators": 300,
    "min_samples_leaf": 2,
    "min_samples_split": 10,
    "random_state": 42,
    "n_jobs": -1 
  },
  "out": {
    "model": "rf_model.pkl",
    "metrics": "metrics.json"
  }
}
